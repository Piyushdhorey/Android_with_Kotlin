<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#415a77"
    tools:context=".ExerciseInfoActivity">

    <LinearLayout
        android:id="@+id/helloName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Hello "
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Juliet"
            android:textColor="#fcdc4d"
            android:textSize="16sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/letsStartWorkout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/helloName"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Let's Start Your Workout"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Today's Workouts"
            android:textSize="15sp"
            android:paddingTop="15dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/firstLine"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintTop_toBottomOf="@+id/letsStartWorkout"
        android:orientation="horizontal"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/lungesGuy"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:src="@drawable/portrait_young_concentrated_man_doing_squats_exercise"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:shapeAppearanceOverlay="@style/roundimageview"
            tools:layout_editor_absoluteY="151dp" >

        </com.google.android.material.imageview.ShapeableImageView>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/pushUpsGuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:src="@drawable/young_powerful_sportsman_training_push_ups_dark_wall"
            app:shapeAppearanceOverlay="@style/roundimageview"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="151dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondLine"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintTop_toBottomOf="@+id/firstLine"
        android:orientation="horizontal"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/joggingGuy"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:src="@drawable/wepik_export_20230824110838j2rk"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:shapeAppearanceOverlay="@style/roundimageview"
            tools:layout_editor_absoluteY="151dp" >

        </com.google.android.material.imageview.ShapeableImageView>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/crunchesGirl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/young_woman_doing_her_workout_home_fitness_mat"
            app:shapeAppearanceOverlay="@style/roundimageview"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="151dp" />


    </LinearLayout>

    <FrameLayout
        android:id="@+id/sevenMinuteExercise"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/play_svgrepo_com_2"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="630dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Start 7 Minute Workout"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            />

    </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>